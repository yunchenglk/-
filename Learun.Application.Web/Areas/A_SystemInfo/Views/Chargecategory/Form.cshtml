@{
    ViewBag.Title = "收费类别管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">名称<font face="宋体">*</font></div>
        <input id="NAME" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">编 码</div>
        <input id="BM" type="text" readonly class="form-control" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">上级类别</div>
        <div id="FID"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">文本框<font face="宋体">*</font></div>
        <input id="SRM" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">是有生效</div>
        <div id="F_EnabledMark"></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">是否删除</div>
        <div id="F_DeleteMark"></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">创建人</div>
        <input id="F_CreateUserId" type="text" readonly class="form-control currentInfo lr-currentInfo-user" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">创建时间</div>
        <input id="F_CreateDate" type="text" readonly class="form-control currentInfo lr-currentInfo-time" />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">备注</div>
        <textarea id="F_Description" class="form-control" style="height:100px;"  ></textarea>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="A_Chargecategory" >
        <div class="lr-form-item-title">所属医院</div>
        <input id="F_CompanyId" type="text" readonly class="form-control currentInfo lr-currentInfo-company" />
    </div>
</div>
@Html.AppendJsFile("/Areas/A_SystemInfo/Views/Chargecategory/Form.js")
